.header
  .header__contents
    .header__contents__top
      .header__contents__top__logo
        =link_to image_tag("/assets/fmarket_logo_red.svg",width:"134",height:"36"), home_top_path
      .header__contents__top__form
        %input.form{name: "keyword", placeholder: "何かお探しですか？", type: "search", value:""}
        .search-button
          = icon('fas', 'search', class:'icon__search')
    .header__contents__below
      .header__contents__below__search
        .header__contents__below__search__category
          %span.fas.fa-list-ul.icon
          =link_to "カテゴリーから探す", "/category/",class:"search__category"
        .header__contents__below__search__brand
          %span.fas.fa-tag.icon
          =link_to "ブランドから探す", "/brands/",class:"search__brands"
      .header__contents__below__registration
        .header__contents__below__registration__new
          =link_to "新規会員登録", "/registration/",class:"registration"
        .header__contents__below__registration__login
          =link_to "ログイン", "/login/",class:"login"
