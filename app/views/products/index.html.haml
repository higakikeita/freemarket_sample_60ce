.main-section
  .header
    -if user_signed_in?
      =render "home/header_login"
    -else
      =render "home/header_unlogin"

  %ul.slick
    %li.slick-list
      = image_tag "topPageSlider1.png"
      .slick__text
        .slick__text--large
          スマホで かんたん
          %br
          フリマアプリ
        .slick__text--small
          メルカリはスマホカメラからすぐに出品できる
          %br
          購入時も安心な独自システムのアプリです
      %ul.slick__link--tag
        %li.link__apple
          = link_to image_tag('download_on_the_AppStore_badge.svg', id: "appstore"), "https://apps.apple.com/jp/app/id667861049?l=ja"
        %li.link__google
          = link_to image_tag('google-play-badge.svg', id: "googleplay"), "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja"
    %li.slick-list
      = image_tag "topPageSlider2.png"

  .pickup-section
    .pickup-section__header
      .pickup-section__header--title
        人気のカテゴリー
      %ul.pickup-section__header--list
        %li.header__list--logo
          レディース
        %li.header__list--logo
          メンズ
        %li.header__list--logo
          家電・スマホ・カメラ
        %li.header__list--logo
          おもちゃ・ホビー・グッズ

    .pickup-section__main
      .pickup-section__main--title
        .main__title--text
          レディース新着アイテム
        .main__title--more
          もっと見る >
      %ul.pickup-section__main--products
